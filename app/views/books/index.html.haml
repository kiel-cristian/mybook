%h1 Books

%table.table.table-bordered
  %thead
    %th Title
    %th Author
    %th Date
    %th Actions
  %tbody
    - @items.each do |item|
      %tr
        %td= link_to item.tittle, book_path(item), class: 'btn btn-link'
        %td= item.author
        %td= item.date
        %td
          = make_cart_link item
          = link_to "Remove Book", book_path(item), class: 'btn btn-mini btn-danger', method: :delete

.form-actions
  = link_to "New Book", new_book_path, class: 'btn'